{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"node": true,
		"amd": true
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"sourceType": "module"
  },
  "globals": {
    "_$": true,
    "_$d": true
  },
  "plugins": [
    "html"
  ],
	"rules": {
		"no-const-assign": "warn",
		"no-this-before-super": "warn",
		"no-undef": "warn",
		"semi": "warn",
		"eqeqeq": ["warn", "smart"],
		"no-unreachable": "warn",
		"no-unused-vars": "warn",
		"constructor-super": "warn",
		"valid-typeof": "warn"
	}
}